<%- include('header'); -%>
    <div class="content">
        <h1>Selected articles</h1>
        <table id="catalog">
            <thead>
                <tr>
                    <th>Name</th>
                    <th scope="col">Reference</th>
                    <th scope="col">Category</th>
                    <th scope="col">Price</th>
                    <th scope="col">supplier</th>
                    <th scope="col">vat</th>
                    <th scope="col">stock</th>
                    <th scope="col">critical stock</th>
                </tr>
            </thead>
            <tbody>
                    <tr>
                        <td>
                            <%= reference.name %>
                        </td>
                        <td>
                            <%= reference.reference %>
                        </td>
                        <td>
                            <%= reference.category %>
                        </td>
                        <td>
                            <%= reference.price %> AED
                        </td>
                        <td>
                            <%= reference.supplier %>
                        </td>
                        <td>
                            <%= reference.vat %>
                        </td>
                        <td>
                            <%= reference.stock %>
                        </td>
                        <td> 
                            <%= reference.critical_stock %>
                        </td>
                    </tr>
            </tbody>
        </table>
    </div>
    <br>
    <%- include('footer'); -%>